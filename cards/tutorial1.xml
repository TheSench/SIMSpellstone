      <confirm>1</confirm>
    </step>
    <step>
      <step_id>20</step_id>
      <arrow id="bountyHunter" />
    </step>
    <step>
      <step_id>30</step_id>
      <flagreq id="inBountyScreen" value="1" />
      <message>
        <line>
          <commander>bountyhunter</commander>
